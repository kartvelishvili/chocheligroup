import React from 'react';
import { motion } from 'framer-motion';
import { Link } from 'react-router-dom';
import { useLanguage } from '@/contexts/LanguageContext';
import { useCompanies } from '@/hooks/useCompanies';
import CompanyLogo from '@/components/CompanyLogo';
import { ArrowRight, RefreshCw, AlertCircle } from 'lucide-react';
import { Skeleton } from '@/components/ui/skeleton';
import { Button } from '@/components/ui/button';
import { useSiteContent } from '@/hooks/useSiteContent';

const PortfolioPage = () => {
  const { t, language } = useLanguage();
  const { companies, loading, error, fetchCompanies } = useCompanies();
  const { content: c } = useSiteContent('portfolio_page');
  const lang = language === 'ka' ? 'ka' : 'en';
  
  // Sort companies by founded year ascending
  const sortedCompanies = [...companies].sort((a, b) => (a.founded_year || 0) - (b.founded_year || 0));

  // Adapter for CompanyLogo component
  const adaptCompany = (c) => ({
    id: c.id,
    name: language === 'ka' ? c.name_ka : c.name_en,
    founded: c.founded_year,
    logo: c.logo_url,
    color: 'bg-corporate-blue'
  });

  return (
    <div className="bg-gray-50 min-h-screen py-12 overflow-x-hidden">
      <div className="container mx-auto px-6">
        <div className="text-center mb-16">
          <h1 className="text-4xl md:text-5xl font-bold text-corporate-blue heading-font mb-6">
            {c?.[`title_${lang}`] || t('Portfolio')}
          </h1>
          <p className="text-xl text-gray-600 max-w-2xl mx-auto body-font">
            {c?.[`subtitle_${lang}`] || t({
              en: 'A diverse ecosystem of market-leading companies built on excellence and innovation.',
              ka: 'ბაზრის ლიდერი კომპანიების მრავალფეროვანი ეკოსისტემა, აგებული სრულყოფილებასა და ინოვაციებზე.'
            })}
          </p>
        </div>

        {loading ? (
           <div className="space-y-12 max-w-4xl mx-auto">
             {[1, 2, 3].map(i => (
                <div key={i} className="flex gap-8 items-center">
                  <Skeleton className="h-32 w-full rounded-2xl" />
                </div>
             ))}
           </div>
        ) : error ? (
           <div className="max-w-xl mx-auto text-center p-8 bg-white rounded-xl shadow-sm border border-red-100">
              <AlertCircle className="w-10 h-10 text-red-500 mx-auto mb-4" />
              <p className="text-gray-800 font-medium mb-4">Unable to load portfolio data.</p>
              <Button onClick={fetchCompanies} variant="outline" className="gap-2">
                 <RefreshCw className="w-4 h-4" /> Try Again
              </Button>
           </div>
        ) : (
          <div className="relative">
             {/* Vertical Line - only show if there are companies */}
             {sortedCompanies.length > 0 && (
                <div className="absolute left-6 md:left-1/2 top-0 bottom-0 w-1 bg-gray-200 transform -translate-x-1/2 hidden md:block"></div>
             )}

             <div className="space-y-12">
               {sortedCompanies.length === 0 && (
                 <div className="text-center py-20 z-10 relative bg-white rounded-xl shadow p-8">
                    <p className="text-gray-500">No companies found in portfolio.</p>
                 </div>
               )}
               {sortedCompanies.map((company, index) => (
                 <motion.div 
                   key={company.id}
                   initial={{ opacity: 0, y: 50 }}
                   whileInView={{ opacity: 1, y: 0 }}
                   viewport={{ once: true, margin: "-100px" }}
                   transition={{ duration: 0.6, delay: index * 0.1 }}
                   className={`relative flex flex-col md:flex-row items-center ${
                     index % 2 === 0 ? 'md:flex-row' : 'md:flex-row-reverse'
                   }`}
                 >
                   {/* Timeline Dot */}
                   <div className="absolute left-6 md:left-1/2 w-6 h-6 bg-corporate-yellow border-4 border-white rounded-full shadow-md z-10 transform -translate-x-1/2 shrink-0 hidden md:block"></div>

                   {/* Content Card */}
                   <div className={`w-full md:w-1/2 ${
                     index % 2 === 0 ? 'md:pr-16 md:text-right' : 'md:pl-16 md:text-left'
                   }`}>
                      <Link to={`/company/${company.id}`} className="group block">
                        <div className={`bg-white p-6 rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 border-t-4 border-transparent hover:border-corporate-yellow flex flex-col overflow-hidden relative`}>
                           <div className={`flex items-center gap-4 mb-4 ${index % 2 === 0 ? 'md:flex-row-reverse' : 'md:flex-row'}`}>
                              <CompanyLogo 
                                company={adaptCompany(company)} 
                                className="w-16 h-16 text-base shadow-md shrink-0 rounded-lg" // Adjusted size for list view
                                showText={false} 
                              />
                              <div className="overflow-hidden">
                                 <h3 className="text-2xl font-bold text-corporate-blue heading-font truncate">
                                    {language === 'ka' ? company.name_ka : company.name_en}
                                 </h3>
                                 <span className="text-corporate-yellow font-bold text-lg font-mono">{company.founded_year}</span>
                              </div>
                           </div>
                           <p className="text-gray-600 body-font mb-4 text-sm md:text-base line-clamp-3">
                              {language === 'ka' ? company.description_ka : company.description_en}
                           </p>
                           <div className={`inline-flex items-center text-corporate-blue font-bold text-sm uppercase tracking-wider group-hover:text-corporate-yellow transition-colors ${
                              index % 2 === 0 ? 'self-end' : 'self-start'
                           }`}>
                              {t('View Company')} <ArrowRight className="ml-2 w-4 h-4 shrink-0" />
                           </div>
                        </div>
                      </Link>
                   </div>
                   
                   {/* Empty space for the other side */}
                   <div className="w-full md:w-1/2"></div>
                 </motion.div>
               ))}
             </div>
          </div>
        )}
      </div>
    </div>
  );
};

export default PortfolioPage;